{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": [
    "airbnb/base",
    "angular",
    "plugin:meteor/recommended",
    "standard"
  ],
  "envs": {
    "angular": true,
    "meteor": true
  },
  "plugins": [
    "angular",
    "import",
    "meteor"
  ],
  "rules": {
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "^meteor/"
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": "meteor"
  }
}
